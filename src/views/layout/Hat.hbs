<div class="hat d-none d-lg-block">
    <div class="contacts">
        <div class="container-lg">
            <div class="d-flex justify-content-between">
                <div class="menu d-flex align-items-center">
                    <a class="item item_color_orange" href="#">
                        <span class="d-flex">{{> ../common/icons/map-marker/MapMarker class="icon"}}</span>
                        <span class="text">Киров</span>
                    </a>

                    <div class="divider"></div>

                    <a class="item" href="#">
                        <span class="d-flex">{{> ../common/icons/user/User class="icon"}}</span>
                        <span class="text">Партнерам</span>
                    </a>

                    <div class="divider"></div>

                    <a class="item item_color_orange" href="#">
                        <span class="d-flex">{{> ../common/icons/smartphone/Smartphone class="icon"}}</span>
                        <span class="text">Скачать приложение</span>
                    </a>

                    <div class="item item_menu">
                        <span class="d-flex">{{> ../common/icons/menu/Menu class="icon"}}</span>
                        <span class="text">Каталог</span>
                    </div>
                </div>

                <div class="d-flex notifications align-items-center">
                    {{> ../common/icons/email/Email class="icon"}}

                    <div class="divider"></div>

                    <span class="position-relative">
                        {{> ../common/icons/heart/Heart class="icon"}}
                        <span class="badge position-absolute">1</span>
                    </span>

                    <div class="divider"></div>

                    <span class="position-relative">
                        {{> ../common/icons/bell/Bell class="icon icon_bell"}}
                        <span class="badge position-absolute">1</span>
                    </span>

                    <div class="divider"></div>

                    <span class="ms-2 d-flex align-items-center">
                        <span href="#"
                              class="text-decoration-none color_0f0f0f d-flex align-items-center openLoginModal c-pointer">
                            {{> ../common/icons/logout/Logout class="icon me-1"}} Войти
                        </span>
                        <span class="color_9b9b9b mx-2">или</span>
                        <a href="#" class="text-decoration-none color_0f0f0f">зарегистрироваться</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="navigation">
        <div class="container-lg">
            <div class="d-flex align-items-center justify-content-between">
                <a href="/">{{> ../common/icons/logo/Logo class="icon"}}</a>

                {{> ../common/ui/InputSearch placeholder="Что вы ищете?" }}

                <div class="selects d-flex">
                    <div class="item">
                        <span class="me-3">Регион</span>
                        {{> ../common/icons/chevron-down/ChevronDown class="icon"}}
                    </div>

                    <div class="item">
                        <span class="me-3">Категория</span>
                        {{> ../common/icons/chevron-down/ChevronDown class="icon"}}
                    </div>

                    <div class="item">
                        <span class="me-3">Формирование цены</span>
                        {{> ../common/icons/chevron-down/ChevronDown class="icon"}}
                    </div>

                    <div class="item">
                        <span class="me-3">Сортировать по</span>
                        {{> ../common/icons/chevron-down/ChevronDown class="icon"}}
                    </div>
                </div>

                <div class="searchButton d-flex align-items-center">
                    <div>{{> ../common/icons/adjust/Adjust class="icon"}}</div>

                    <div class="button baseButton baseButton_theme_blue">Найти</div>

                    <div class="button baseButton baseButton_search d-flex">
                        {{> ../common/icons/map-marker/MapMarker class="icon"}}
                        <span class="ms-2">На карте</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="hat hat_mobile d-md-none">
    <div class="contacts d-flex align-items-center justify-content-between px-3">
        {{> ../common/location/Location}}

        <div class="notifications d-flex">
            <a href="#" class="link">
                {{> ../common/icons/email/Email class="icon"}}
            </a>

            <a href="#" class="link ms-3">
                <span class="position-relative">{{> ../common/icons/heart/Heart class="icon"}}<span
                    class="badge position-absolute">1</span></span>
            </a>

            <a href="#" class="link ms-3">
                <span class="position-relative">{{> ../common/icons/bell/Bell class="icon icon_bell"}}<span
                    class="badge position-absolute">1</span></span>
            </a>

            <a href="#" class="link ms-3">
                {{> ../common/icons/logout/Logout class="icon"}}
            </a>
        </div>
    </div>

    <div class="navigation d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <div class="px-3 openMenuButton d-flex align-items-center">{{> ../common/icons/menu2/Menu2 class="color_161616"}}</div>
            <div class="ms-3">{{> ../common/icons/logo/Logo }}</div>
        </div>

        {{> ../common/icons/search/Search class="color_161616"}}
    </div>
</div>

<div class="background sidebarMenuBackground"></div>
<div class="background searchMenuBackground"></div>

<div class="hatSearchForm">
    <div class="row mb-4">
        <div class="col-6">
            <div class="mb-3">
                {{> ../common/ui/Select default="Категория"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/Select default="Регион"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/Select default="Направление"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/Select default="Формирование цены"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/Select default="Электронная площадка"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/InputText id="debtor" placeholder="ИНН Должника / Продавца"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/Select default="Сортировать по"}}
            </div>
            <div class="mb-3">
                {{> ../common/ui/InputDateInterval placeholder1="Дата публикации, от" placeholder2="Дата публикации, до" }}
            </div>
            <div class="mb-3">
                {{> ../common/ui/InputDateInterval placeholder1="Дата окончания, от" placeholder2="Дата окончания, до" }}
            </div>
        </div>

        <div class="col-6">
            <div class="mb-5">
                {{> ../common/ui/RangeSliderTwoValue displayPostfix=" ₽" start=200000 end=300000 min=100000 max=1000000 labelStart="Цена начальная, от:" labelEnd="Цена начальная, до:" }}
            </div>

            <div class="mb-5">
                {{> ../common/ui/RangeSliderTwoValue displayPostfix=" ₽" start=200000 end=300000 min=100000 max=1000000 labelStart="Цена текущая, от:" labelEnd="Цена текущая, до:" }}
            </div>

            <div class="row mb-5">
                <div class="col-6">
                    {{> ../common/ui/RangeSliderOneValue displayPostfix="%" start=49 min=0 max=100 labelStart="Текущая скидка:" }}
                </div>

                <div class="col-6">
                    {{> ../common/ui/RangeSliderOneValue displayPostfix="%" start=49 min=0 max=100 labelStart="Возможная скидка:" }}
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    {{> ../common/ui/InputCheckbox id="check1" label="Активные"}}
                </div>
                <div class="col-6">
                    {{> ../common/ui/InputCheckbox id="check4" label="Есть фотографии лотов в объявлении"}}
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    {{> ../common/ui/InputCheckbox id="check2" label="Завершенные" checked=true}}
                </div>
                <div class="col-6">
                    {{> ../common/ui/InputCheckbox id="check5" label="Есть отчёт независимого оценщика" checked=true}}
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    {{> ../common/ui/InputCheckbox id="check3" label="Анонс продажи"}}
                </div>
                <div class="col-6">
                    {{> ../common/ui/InputCheckbox id="check6" label="Скрывать ранее просмотренные объявления"}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-end">
                {{> ../common/catalog-toggle-view/CatalogToggleView tiles=true}}

                <span class="me-2"></span>

                <button class="baseButton baseButton_theme_darkGray baseButton_size_medium">
                    {{> ../common/icons/excel/Excel class="icon" }}
                    <span>Выгрузить результаты</span>
                </button>

                <span class="me-2"></span>

                <button class="baseButton baseButton_theme_darkGray baseButton_size_medium">
                    {{> ../common/icons/trash/Trash class="icon" }}
                    <span>Очистить</span>
                </button>

                <span class="me-2"></span>

                <button class="baseButton baseButton_theme_darkGray baseButton_size_medium">
                    {{> ../common/icons/download/Download class="icon" }}
                    <span>Сохранить</span>
                </button>

                <span class="me-2"></span>

                <button class="baseButton baseButton_size_medium baseButton_theme_blue">
                    <span>Найти</span>
                </button>

                <span class="me-2"></span>

                <button class="baseButton baseButton_size_medium">
                    {{> ../common/icons/map-marker/MapMarker class="icon" }}
                    <span>На карте</span>
                </button>
            </div>
        </div>
    </div>
</div>

