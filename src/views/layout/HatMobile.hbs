<div class="hatMobile d-md-none">
    <div class="contacts">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between">
                <div
                    class="openMenuButton d-flex align-items-center">{{> ../common/icons/menu2/Menu2 class="icon"}}</div>

                <div class="notifications d-flex">
                    <a href="#" class="link">
                        {{> ../common/icons/email/Email class="icon"}}
                    </a>

                    <a href="#" class="link ms-3">
                <span class="position-relative">{{> ../common/icons/heart/Heart class="icon"}}<span
                    class="badge position-absolute">1</span></span>
                    </a>

                    <a href="#" class="link ms-3">
                <span class="position-relative">{{> ../common/icons/bell/Bell class="icon icon_bell"}}<span
                    class="badge position-absolute">1</span></span>
                    </a>

                    <a href="#" class="link ms-3">
                        {{> ../common/icons/logout/Logout class="icon"}}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container {{#if endpoint}}d-none{{/if}}">
        <div class="row">
            <div class="col-12">
                <div class="navigation">
                    <div class="d-flex">
                        {{> ../common/icons/logo/Logo class="logo" }}
                    </div>

                    <div class="searchInputContainer">
                        <input type="text" class="baseInputText searchInput" name="search"/>

                        {{> ../common/icons/search/Search class="icon"}}
                    </div>

                    <div class="searchButton">
                        <div class="position-relative d-flex">
                            <span class="badge searchButton__badge">1</span>
                            {{> ../common/icons/adjust/Adjust class="icon"}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
