<div class="item">
    <div class="item__header">
        {{> OptionHat key=key title=title}}
    </div>

    <div class="d-flex options flex-column flex-xxl-row">
        <div class="d-flex align-items-md-center options__item mb-3 mb-xxl-0 flex-column flex-md-row">
            <div class="me-3 fs-16px fs-md-18px mb-2 mb-md-0">Стоимость:</div>

            <div class="d-flex align-items-center">
                <div class="costWrapper item__input">
                    {{> ../../ui/InputText placeholder="2000"}}
                </div>

                <span class="rouble fs-18px"></span>
            </div>
        </div>

        <div class="d-flex align-items-md-center options__item flex-column flex-md-row">
            <div class="me-3 fs-16px fs-md-18px mb-2 mb-md-0">Срок:</div>

            <div class="d-flex align-items-center">
                <div class="winTermWrapper item__input">
                    {{> ../../ui/InputText placeholder="12"}}
                </div>

                {{> ../../ui/account/Switch offLabel="Часы" onLabel="Дни"}}
            </div>
        </div>
    </div>
</div>