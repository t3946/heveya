<div class="rangeSlider" data-min="{{min}}" data-max="{{max}}">

    <div class="row rangeSlider__displayRow">
        <div class="col-6">
            <input class="start baseInputText" type="hidden" value="{{start}}">

            <div class="display display_start">
                {{#if labelStartMicro}}
                    <div class="label d-md-none">{{labelStartMicro}}</div>
                    <div class="label d-none d-md-block">{{labelStart}}</div>
                {{else}}
                    <div class="label">{{labelStart}}</div>
                {{/if}}

                <div class="displayValueGroup">
                    <span class="value"></span>
                    {{displayPostfix}}
                </div>
            </div>
        </div>

        <div class="col-6">
            <input class="end baseInputText" type="hidden" value="{{end}}">

            <div class="display display_end">
                {{#if labelEndMicro}}
                    <div class="label d-md-none">{{labelEndMicro}}</div>
                    <div class="label d-none d-md-block">{{labelEnd}}</div>
                {{else}}
                    <div class="label">{{labelEnd}}</div>
                {{/if}}

                <div class="displayValueGroup">
                    <span class="value"></span>
                    {{displayPostfix}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="slider"></div>
        </div>
    </div>
</div>