<div class="d-flex inputRadioAccount">
    <div class="flex-shrink-0">
        <input
            class="input"
            type="radio"
            name="{{name}}"
            id="{{id}}"
            value="{{value}}"
            {{#if checked}}checked{{/if}}
        />
    </div>

    <label class="label ps-3" for="{{id}}">
        {{label}}
    </label>
</div>