{{> ../../layout/Hat}}

<div class="home">
    <div class="slider">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/layout/hat/slider-dummy.jpg" class="d-block w-100" alt="image dummy">
                </div>
                <div class="carousel-item">
                    <img src="/images/layout/hat/slider-dummy.jpg" class="d-block w-100" alt="image dummy">
                </div>
                <div class="carousel-item">
                    <img src="/images/layout/hat/slider-dummy.jpg" class="d-block w-100" alt="image dummy">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                <span class="sliderButton">{{> ../../common/icons/arrow-left/ArrowLeft class="icon"}}</span>
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                <span class="sliderButton">{{> ../../common/icons/arrow-right/ArrowRight class="icon"}}</span>
            </button>
        </div>
    </div>

    <div class="offers">
        <div class="container-lg">
            <div class="row">
                <div class="col">
                    <h1 class="header1 offersHeader">Гевея - информационная система имущественных торгов</h1>
                </div>
            </div>

            <div class="grid">
                <div class="item blueAnglePanel item1">
                    {{> ../../common/icons/auto/Auto class="icon" }}

                    <div class="fs18px fw-bold">
                        <div class="title">Легковые <br> автомобили</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item2">
                    {{> ../../common/icons/truck/Truck class="icon" }}
                    <div class="fs18px fw-bold">
                        <div class="title">Коммерческий транспорт</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item3">
                    <div class="fs18px fw-bold">
                        <div class="title">Спецтехника</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item4">
                    <div class="fs18px fw-bold">
                        <div class="title">Станки и <br> оборудование</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item5">
                    {{> ../../common/icons/home/Home class="icon" }}
                    <div class="fs18px fw-bold">
                        <div class="title">Жилая <br> недвижимость</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item6">
                    <div class="fs18px fw-bold">
                        <div class="title">Коммерческая <br> недвижимость</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item7">
                    <div class="fs18px fw-bold">
                        <div class="title">Имущественный <br> комплекс</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item8">
                    <div class="fs18px fw-bold">
                        <div class="title">Сельское <br> хозяйство</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item9">
                    <div class="fs18px fw-bold">
                        <div class="title">Материальные <br> ценности</div>
                        {{> offer/Location }}
                    </div>
                </div>

                <div class="item blueAnglePanel item10">
                    {{> ../../common/icons/scales/Scales class="icon" }}
                    <div class="fs18px fw-bold">
                        <div class="title">Права требования</div>
                        {{> offer/Location }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="d-flex justify-content-center show-all-offers">
                    <span class="baseButton">Все предложения</span>
                </div>
            </div>
        </div>
    </div>

    <div class="winners">
        <div class="container-lg">
            <h2 class="header2 mb-4">Победители и сделки</h2>

            <div class="d-flex justify-content-between">
                <div class="winnersItem winnersItem_theme_1">
                    <span class="winnersItemText">Поздравляем победителей</span>
                </div>
                <div class="winnersItem winnersItem_theme_2">
                    <span class="winnersItemText">Топ 20 победителей месяца</span>
                </div>
                <div class="winnersItem winnersItem_theme_3">
                    <span class="winnersItemText">Топ 100 сделок месяца</span>
                </div>
            </div>
        </div>
    </div>

    <div class="interests">
        <div class="container-lg">
            <h2 class="interests__header header2 mb-4">Это интересно</h2>

            <div class="grid">
                <div class="item item_1">
                <span class="title d-flex flex-column align-items-center">
                    <span>Можно успеть!</span>
                    <span class="subtitle">До завершения торгов 2 дня</span>
                </span>
                </div>

                <div class="item item_2">
                    <span class="title">Цена 1 рубль</span>
                </div>

                <div class="item item_3">
                    <span class="title">Автомобили со скидкой <br> более 50%</span>
                </div>

                <div class="item item_4">
                    <span class="title">Проверь конкурента на торгах</span>
                </div>

                <div class="item item_5">
                    <span class="title">Недвижимость со скидкой <br> более 50%</span>
                </div>

                <div class="item item_6">
                    <span class="title">Аукционные брокеры</span>
                </div>

                <div class="item item_7">
                    <span class="title">Возможные конкуренты</span>
                </div>
            </div>
        </div>
    </div>

    <div class="top100">
        <div class="container-lg">
            <h2 class="header2">Выбор пользователей: ТОП 100 лотов</h2>

            <div class="row">
                <div class="col-12">
                    <div class="grid">
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                        {{> ../../common/lot-card/tile/Openned}}
                    </div>

                    <div class="d-flex justify-content-center show-all-button">
                        <span class="baseButton">Все предложения</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="ratings">
        <div class="container-lg">
            <h2 class="header2 mb-4">Рейтинги</h2>

            <div class="row">
                <div class="col-3">
                    <div class="listHeader d-flex mb-3">
                        <span
                            class="iconWrapper iconWrapper_theme_blue">{{> ../../common/icons/rating/Rating class="icon"}}</span>
                        <span class="ms-3 text">Рейтинг участников <br> торгов</span>
                    </div>

                    {{> RatingList theme="blue"}}
                </div>

                <div class="col-3">
                    <div class="listHeader d-flex mb-3">
                        <span
                            class="iconWrapper iconWrapper_theme_orange">{{> ../../common/icons/rating/Rating class="icon"}}</span>
                        <span class="ms-3 text">Рейтинг организаторов <br> торгов</span>
                    </div>

                    {{> RatingList theme="orange"}}
                </div>

                <div class="col-3">
                    <div class="listHeader d-flex mb-3">
                        <span
                            class="iconWrapper iconWrapper_theme_gray">{{> ../../common/icons/rating/Rating class="icon"}}</span>
                        <span class="ms-3 text">Рейтинг арбитражных <br> управляющих</span>
                    </div>

                    {{> RatingList theme="gray"}}
                </div>

                <div class="col-3">
                    <div class="listHeader d-flex mb-3">
                        <span
                            class="iconWrapper iconWrapper_theme_green">{{> ../../common/icons/rating/Rating class="icon"}}</span>
                        <span class="ms-3 text">Рейтинг электронных <br> площадок</span>
                    </div>

                    {{> RatingList theme="green"}}
                </div>
            </div>
        </div>
    </div>

    <div class="market">
        <div class="container-lg">
            <h2 class="header header2">Рынок торгов в цифрах</h2>

            <div class="d-flex justify-content-between">
                <div class="homeBiddingNumbers1" style="width: 560px; height: 250px"></div>
                <div class="homeBiddingNumbers2" style="width: 560px; height: 250px"></div>
                <div class="homeBiddingNumbers3" style="width: 560px; height: 250px"></div>
            </div>

            <div class="marketFooter d-flex justify-content-center align-items-end">
                <span class="moreInfo">Подробнее</span>

                <div class="marketFooter__stats stats d-flex">
                    <div class="item d-flex align-items-center">
                        <div class="d-flex flex-column">
                            <span class="name">Всего торгов</span>
                            <span class="value">3 000 000</span>
                        </div>
                    </div>
                    <div class="item d-flex align-items-center">
                        <div class="d-flex flex-column">
                            <span class="name">Состоялось</span>
                            <span class="value">2 549 545</span>
                        </div>
                    </div>
                    <div class="item d-flex align-items-center">
                        <div class="d-flex flex-column">
                            <span class="name">На сумму</span>
                            <span class="value rouble">99 056 025</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="registries">
        <div class="container-lg">
            <h2 class="header2 mb-4">Реестры</h2>

            <div class="grid">
                <div class="item item-1">
                    <span class="text">Реестр участников торгов</span>
                </div>

                <div class="item item-2 blueAnglePanel">
                    <span class="text">Реестр должников</span>
                </div>

                <div class="item item-3 blueAnglePanel">
                    <span class="text">Реестр Арбитражных управляющих</span>
                </div>

                <div class="item item-4 blueAnglePanel">
                    <span class="text">Реестр Организаторов торгов</span>
                </div>

                <div class="item item-5 blueAnglePanel">
                    <span class="text">Реестр СРО</span>
                </div>

                <div class="item item-6">
                    <span class="text">Реестр электронных площадок</span>
                </div>
            </div>
        </div>
    </div>

    <div class="articles">
        <div class="container-lg">
            <h2 class="header2">Статьи</h2>

            <div class="row">
                <div class="itemColumn col-4">
                    {{> Article }}
                </div>

                <div class="itemColumn col-4">
                    {{> Article }}
                </div>

                <div class="itemColumn col-4">
                    {{> Article }}
                </div>
            </div>

            <div class="row">
                <div class="itemColumn col-4">
                    {{> Article }}
                </div>

                <div class="itemColumn col-4">
                    {{> Article }}
                </div>

                <div class="itemColumn col-4">
                    {{> Article }}
                </div>
            </div>

            <div class="d-flex justify-content-center readAll">
                <div class="baseButton">Все статьи</div>
            </div>
        </div>
    </div>
</div>

{{> ../../layout/Footer}}