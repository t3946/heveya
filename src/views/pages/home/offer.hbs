<div class="offer d-flex flex-column">
    <div class="offerHeader">{{offer.title}}</div>

    <div class="flex-grow-1 d-flex justify-content-end align-items-center">
        <div>
            <img class="offerImage" src="{{offer.image}}" alt="{{offer.title}}" title="{{offer.title}}" />
        </div>
    </div>

    <div class="offerFooter text-center">
        <div class="d-flex justify-content-center">
            <div class="d-flex">
                <div class="offerFooterIcon me-2"></div>
                в Кирове: {{offer.inKirov}}
            </div>
        </div>
    </div>
</div>