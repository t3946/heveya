<div class="bidInfoDesktopGrid">
    <div class="imageWrapper">
        {{#if isDiscountLabel}}
            <div class="imageWrapper__label">
                {{> ../../../common/image-label/Discount size="big" }}
            </div>
        {{/if}}

        {{#if isAuctionLabel}}
            <div class="imageWrapper__label">
                {{> ../../../common/image-label/Auction size="big" }}
            </div>
        {{/if}}

        {{> Slider id="sliderBidInfoDesktop" }}
    </div>

    <div class="flex-grow-1 ms-xl-2 ms-xxl-4 infoColumn">
        <div class="lotMainInfo bidInfo__lotMainInfo d-flex justify-content-between">
            <span class="number fw-bold">Лот: 18-24-5186972</span>
            <span>Имущество должников (банкротство)</span>
            <span>Опубликовано: 21.03.2022</span>
            <span>Завершение до: 25.12.2023</span>
            <span class="fw-bold">{{> ../../../common/location/Location }}</span>
        </div>

        <div class="d-flex">
            <div class="flex-grow-1">
                <div class="bidInfo__debtor">{{> Debtor }}</div>

                {{> ../contacts/Contacts }}
            </div>

            <div class="pricesWrapper">
                {{> ../PricesColumn }}
            </div>
        </div>
    </div>
</div>