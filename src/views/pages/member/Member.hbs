{{> ../../layout/Hat}}

<div class="memberPage overflow-hidden">
    <div class="container-lg">
        {{> ../../common/breadcrumbs/Breadcrumbs}}

        <h1 class="header1 memberPage__block">Участник торгов Константинов Константин Константинович</h1>

        <div class="participantStats containerFrame memberPage__block">
            {{> ParticipantStats }}
        </div>

        <div
            class="d-flex align-items-center justify-content-between containerFrame memberPage__block">
            <div class="nameValuePair">
                <span class="name">Максимальная сумма сделки:</span>
                <span class="value">5 000 ₽</span>
            </div>

            <div class="nameValuePair">
                <span class="name">Количество площадок:</span>
                <span class="value">22</span>
            </div>

            <div class="nameValuePair">
                <span class="name">Средняя сумма договора:</span>
                <span class="value">6 000 ₽</span>
            </div>
        </div>

        <div class="containerFrame memberPage__block">
            <h3 class="header2 text-center mb-4">Аукцион</h3>
            <div class="row">
                <div class="col-6">
                    <div class="biddingChart" style="width: 800px;height: 370px"></div>
                </div>
                <div class="col-6">
                    <div class="winsChart" style="width: 800px;height: 370px"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="averagePriceChart" style="width: 800px;height: 370px"></div>
                </div>
                <div class="col-6">
                    <div class="averageDerivativePriceChart" style="width: 800px;height: 370px"></div>
                </div>
            </div>
        </div>

        <div class="containerFrame memberPage__block">
            <h3 class="header2 text-center mb-4">Публичное предложение</h3>
            <div class="row">
                <div class="col-6">
                    <div class="biddingChart" style="width: 800px;height: 370px"></div>
                </div>
                <div class="col-6">
                    <div class="winsChart" style="width: 800px;height: 370px"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="averagePriceChart" style="width: 800px;height: 370px"></div>
                </div>
                <div class="col-6">
                    <div class="averageDerivativePriceChart" style="width: 800px;height: 370px"></div>
                </div>
            </div>
        </div>

        <div class="containerFrame memberPage__block">
            <h2 class="tableHeader header2 text-center">Карта участий</h2>

            {{> ../../common/top10/Top10}}
        </div>

        <div class="charts containerFrame memberPage__block">
            <h2 class="header header2 text-center">Сфера интересов</h2>

            <div class="d-flex align-items-center">
                <div>
                    <h3 class="header3 text-center">Аукцион</h3>
                    <div class="interestIncreaseChart" style="width: 400px; height: 300px"></div>
                </div>

                <div class="flex-grow-1">
                    {{> ../../common/tables/interests-sphere/Increase}}
                </div>
            </div>


            <div class="d-flex align-items-center">
                <div>
                    <h3 class="header3 text-center">Публичное предложение</h3>
                    <div class="interestDecreaseChart" style="width: 400px; height: 300px"></div>
                </div>

                <div class="flex-grow-1">
                    {{> ../../common/tables/interests-sphere/Decrease}}
                </div>
            </div>
        </div>

        <h3 class="header2 memberPage__block">Анализ юридического лица ООО «Ювс»</h3>

        <div class="analyzeCompany memberPage__block">
            <div class="analyzeCompanyStats d-flex justify-content-between memberPage__block">
                {{> ../analyze-company/stats/Basic }}
                {{> ../analyze-company/stats/Bad }}
                {{> ../analyze-company/stats/Bad }}
                {{> ../analyze-company/stats/Bad }}
                {{> ../analyze-company/stats/Good }}
                {{> ../analyze-company/stats/Good }}
            </div>

            <div class="memberPage__block">
                {{> ../analyze-company/contacts/Contacts }}
            </div>

            <div class="memberPage__block">
                {{> ../analyze-company/charts/Charts }}
            </div>

            <div class="courtCases memberPage__block">
                <h2 class="header2 header text-center">Судебные дела</h2>

                {{> ../analyze-company/CourtCaseItem}}
                {{> ../analyze-company/CourtCaseItem}}
                {{> ../analyze-company/CourtCaseItem}}
                {{> ../analyze-company/CourtCaseItem}}
            </div>

            <div class="courtCases memberPage__block">
                <h2 class="header2 header text-center">Исполнительные производства</h2>

                {{> ../analyze-company/CourtCaseItem}}
            </div>

            <div class="lotsList memberPage__block">
                <h2 class="header2 header text-center">Список лотов</h2>

                <div>
                    {{> ../../common/forms/SearchForm}}
                </div>

                {{> ../../common/lot-card/line/Completed }}
                <hr>
                <div>
                    <img src="/images/dummy.jpg" alt="">
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{> ../../common/pagination/Pagination }}
        </div>
    </div>
</div>

{{> ../../layout/Footer}}