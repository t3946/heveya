{{> ../../layout/Hat}}

<div class="memberPage overflow-hidden">
    <div class="container-lg">
        {{> ../../common/breadcrumbs/Breadcrumbs}}

        <h1 class="header1 memberPage__block">Участник торгов Константинов Константин Константинович</h1>

        <div class="participantStats containerFrame memberPage__block">
            {{> ParticipantStats }}
        </div>

        <div
            class="d-flex align-items-center justify-content-between containerFrame memberPage__block">
            <div class="nameValuePair">
                <span class="name">Максимальная сумма сделки:</span>
                <span class="value">5 000 ₽</span>
            </div>

            <div class="nameValuePair">
                <span class="name">Количество площадок:</span>
                <span class="value">22</span>
            </div>

            <div class="nameValuePair">
                <span class="name">Средняя сумма договора:</span>
                <span class="value">6 000 ₽</span>
            </div>
        </div>

        <div class="charts containerFrame memberPage__block">
            <h2 class="header header2 text-center">Аукцион</h2>
        </div>

        <div class="charts containerFrame memberPage__block">
            <h2 class="header header2 text-center">Публичное предложение</h2>
        </div>

        <div class="containerFrame memberPage__block">
            <h2 class="tableHeader header2 text-center">Карта участий</h2>

            {{> ../../common/top10/Top10}}
        </div>

        <div class="charts containerFrame memberPage__block">
            <h2 class="header header2 text-center">Сфера интересов</h2>

            <div class="d-flex align-items-center">
                <div>
                    <h3 class="header3 text-center">Аукцион</h3>
                    <div class="interestIncreaseChart" style="width: 400px; height: 300px"></div>
                </div>

                <div class="flex-grow-1">
                    {{> ../../common/tables/interests-sphere/Increase}}
                </div>
            </div>


            <div class="d-flex align-items-center">
                <div>
                    <h3 class="header3 text-center">Публичное предложение</h3>
                    <div class="interestDecreaseChart" style="width: 400px; height: 300px"></div>
                </div>

                <div class="flex-grow-1">
                    {{> ../../common/tables/interests-sphere/Decrease}}
                </div>
            </div>
        </div>
    </div>
</div>

{{> ../../layout/Footer}}